{
  "name": "liquidplayground",
  "displayName": "Liquid Playground",
  "description": "An extension that enables you to interact with liquid directly from VSCode.",
  "icon": "images/logo.png",
  "publisher": "evlian",
  "version": "1.4.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "liquidplayground.launchPlayground",
        "title": "Launch Playground"
      },
      {
        "command": "liquid-playground.openPlayground",
        "title": "Open Liquid Playground"
    }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "liquidplayground.launchPlayground",
          "when": "resourceLangId == liquid",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "liquidjs": "^10.14.0"
  }
}
